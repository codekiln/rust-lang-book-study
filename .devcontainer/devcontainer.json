{
  "name": "Rust CLI Study",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "1.90",
      "profile": "default"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb"
      ],
      "settings": {
        "files.autoSave": "afterDelay"
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh"
}
